<?xml version="1.0"?>
<root>
    <!-- KeyRemap4Macbook --> 
    <item>
	  <name>Ctrl+Delete to Delete</name>
	  <identifier>private.ctrldeldel</identifier>
	  <autogen>--KeyToKey-- KeyCode::DELETE, ModifierFlag::CONTROL_L, KeyCode::FORWARD_DELETE</autogen>
    </item>

    <vkopenurldef>
        <name>KeyCode::VK_OPEN_URL_APP_Chrome</name>
        <url type="file">/Applications/Google Chrome.app</url>
    </vkopenurldef>
    <vkopenurldef>
        <name>KeyCode::VK_OPEN_URL_APP_iTerm</name>
        <url type="file">/Applications/iTerm.app</url>
    </vkopenurldef>
    <vkopenurldef>
        <name>KeyCode::VK_OPEN_URL_APP_SublimeText</name>
        <url type="file">/Applications/Sublime Text 2.app</url>
    </vkopenurldef>

    <item>
      <name>VK_OPEN_APPS</name>
      <appendix>Command+1 to Launch Chome</appendix>
      <appendix>Command+2 to Launch iTerm</appendix>
      <appendix>Command+3 to Launch SublimeText</appendix>
      <identifier>remap.vk_open_apps</identifier>
      <autogen>__KeyToKey__ KeyCode::KEY_1, ModifierFlag::COMMAND_L, KeyCode::VK_OPEN_URL_APP_Chrome</autogen>
      <autogen>__KeyToKey__ KeyCode::KEY_2, ModifierFlag::COMMAND_L, KeyCode::VK_OPEN_URL_APP_iTerm</autogen>
      <autogen>__KeyToKey__ KeyCode::KEY_3, ModifierFlag::COMMAND_L, KeyCode::VK_OPEN_URL_APP_SublimeText</autogen>
    </item>

</root>                      
